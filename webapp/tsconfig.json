{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2020",
    "lib": ["DOM", "ES2015", "ES2017", "DOM.Iterable"],
    "types": ["vite/client"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}